<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
  <LinearLayout android:orientation="vertical"
		android:isScrollContainer="true"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
    <Spinner android:id="@+id/watch_widget_configuration_watch_type"
	     android:layout_width="fill_parent"
	     android:layout_height="wrap_content"
	     android:prompt="@string/watch_widget_watch_type"
	     />
    <LinearLayout android:id="@+id/watch_widget_configuration_command_type"
		  android:orientation="vertical"
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content">
      <TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/watch_widget_watch_command"
		/>
      <EditText android:id="@+id/watch_widget_configuration_watch_command"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		/>
    </LinearLayout>
    <LinearLayout android:id="@+id/watch_widget_configuration_file_type"
		  android:orientation="vertical"
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content">
      <Button android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:id="@+id/watch_widget_configuration_watch_path_button"
	      />
    </LinearLayout>
    <TextView android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:text="@string/watch_widget_watch_regexp"
	      />
    <EditText android:id="@+id/watch_widget_configuration_watch_regexp"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      />
    <TextView android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:text="@string/watch_widget_watch_replacement"
	      />
    <EditText android:id="@+id/watch_widget_configuration_watch_replacement"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      />
    <TextView android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:text="@string/watch_widget_watch_interval"
	      />
    <EditText android:id="@+id/watch_widget_configuration_watch_interval"
	      android:inputType="phone"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      />
    <TextView android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:text="@string/watch_widget_watch_font_size"
	      />
    <EditText android:id="@+id/watch_widget_configuration_watch_font_size"
	      android:inputType="phone"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      />
    <TextView android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:text="@string/watch_widget_watch_background_color"
	      />
    <EditText android:id="@+id/watch_widget_configuration_watch_background_color"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      />
    <TextView android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:text="@string/watch_widget_watch_font_color"
	      />
    <EditText android:id="@+id/watch_widget_configuration_watch_font_color"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      />
    <Button android:layout_height="wrap_content" 
	    android:layout_width="fill_parent" 
	    android:id="@+id/watch_widget_configuration_save_button" 
	    android:text="@string/watch_widget_save_config">
    </Button>
  </LinearLayout>
</ScrollView>
